{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}
{% block body %}
    <h1>Connexion</h1>

    <form action="{{ path('security_login') }}" method="POST">
        <div class="form-group">
            <input placeholder="Email" name="_username" type="text" class="form-control" required>
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe" name="_password" type="password" class="form-control" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
        <div class="form-group">

            <a href="{{ path('security_registration') }}" class="btn btn-secondary">Se cr√©er un compte</a>
        </div>
    </form>
{% endblock %}